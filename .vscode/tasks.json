{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake: Configure",
      "type": "shell",
      "command": "cmake",
      "args": ["-S", "${workspaceFolder}", "-B", "${workspaceFolder}/build"],
      "problemMatcher": []
    },
    {
      "label": "CMake: Build",
      "type": "shell",
      "command": "cmake",
      "args": ["--build", "${workspaceFolder}/build"],
      "problemMatcher": []
    },
    {
      "label": "CTest",
      "type": "shell",
      "command": "ctest",
      "args": ["--test-dir", "${workspaceFolder}/build"],
      "problemMatcher": []
    }
  ]
}
